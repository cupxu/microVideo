        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="author" property="author" />
        <result column="type" property="type" />
        <result column="create_time" property="createTime" />
        <result column="time_length" property="timeLength" />
        <result column="video_path" property="videoPath" />
        <result column="cover_path" property="coverPath" />
        <result column="description" property="description" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, author, type, create_time, time_length, video_path, cover_path, description
    </sql>

</mapper>
